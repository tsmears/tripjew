<h1>Listing trips</h1>

<table class="table table-bordered table-hover">
  <tr>
    <th>Trip Name</th>
    <th>Participants</th>
    <th>Total Spent</th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.name %></td>
    <td><%= trip.users.map(&:name).join(", ") %></td>
    <td><%= trip.total_spent %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<button type ="button" class="btn btn-primary">
  <%= link_to 'New Trip', new_trip_path %>
</button>
